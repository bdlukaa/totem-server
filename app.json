{
  "name": "Totem Web Server",
  "healthchecks": {
    "web": [
      {
        "type": "startup",
        "name": "web check",
        "path": "/",
        "contents": "Totem"
      }
    ]
  },
  "cron": [
    {
      "command": "./manage.py totem_tasks",
      "schedule": "*/10 * * * *"
    },
    {
      "command": "./manage.py clearsessions",
      "schedule": "@daily"
    }
  ],
  "scripts": {
    "dokku": {
      "predeploy": "python manage.py collectstatic --noinput",
      "postdeploy": "python manage.py migrate --noinput"
    }
  }
}
